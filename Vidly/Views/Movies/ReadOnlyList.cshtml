@model IEnumerable<Vidly.Models.Movie>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@*@using (Html.BeginForm("NewMovie", "Movies"))
{
	<button class="btn btn-primary" type="submit">New Movie</button>
}*@

<table id="movies" class="table table-striped table-bordered">

	@if (Model.Count() > 0)
	{
		<thead>
			<tr>
				<th>Movie</th>
				<th>Genre</th>
				@*<th>Delete</th>*@
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
			<tr>
				<td>@Html.ActionLink(@movie.Name, "Details", "Movies", new { id = @movie.Id }, null)</td>
				<td>@movie.Genre.Name</td>
				@*<td>
					<button class="btn-link">Delete</button>
				</td>*@
			</tr>
			}
		</tbody>

	}
	else
	{
		<span>We don't have any movies yet</span>
	}
</table>


@section scripts
{
	<script>
		$(document).ready(function () {
			$("#movies").DataTable();
		});
	</script>
}

