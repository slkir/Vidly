@model IEnumerable<Vidly.Models.Movie>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-striped table-bordered">

	@if (Model.Count() > 0)
	{
		<tr>
			<th>Customers</th>
		</tr>
		foreach (var movie in Model)
		{
			<tr>
				<td>@movie.Name</td>
			</tr>
		}
	}
	else
	{
		<span>We don't have any movies yet</span>
	}
</table>

